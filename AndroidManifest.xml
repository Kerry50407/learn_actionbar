<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.learn_actionbar"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light" >
        <activity
            android:name="com.example.learn_actionbar.MainActivity"
            android:label="ActionBar 的學習"
            android:logo="@drawable/android_icon" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.learn_actionbar.Activity1"
            android:label="@string/title_activity_activity1"
            android:parentActivityName="com.example.learn_actionbar.MainActivity" >
        </activity>
        <activity
            android:name="com.example.learn_actionbar.Activity2"
            android:label="@string/title_activity_activity2"
            android:parentActivityName="com.example.learn_actionbar.MainActivity" >
        </activity>
    </application>

</manifest>
